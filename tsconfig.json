{
    "compilerOptions": {
      "types": [
        "node"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
        "DOM",
        "ES6"
      ],
      "target": "ES5",
      "noImplicitAny": true,
      "strict": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "preserveConstEnums": true,
      "removeComments": true,
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "src/**/*",
      "main.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }